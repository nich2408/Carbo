<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewmodels="clr-namespace:Carbo.ViewModels"
			 xmlns:carbocontrols="clr-namespace:Carbo.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Carbo.Views.QuickRequestView"
			 x:DataType="viewmodels:QuickRequestViewModel"
			 Background="{StaticResource TerraColor}">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Assets/CarboColorsResourceDictionary.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	

	<Grid RowDefinitions="auto,*" ColumnDefinitions="*">
		<!-- URL top bar -->
		<Grid Grid.Row="0" Grid.Column="0" RowDefinitions="*" ColumnDefinitions="auto, *, auto">
			<carbocontrols:UrlTextBox
				Grid.Row="0"
				Grid.Column="1"
				DataContext="{Binding UrlTextBoxViewModel}">
			</carbocontrols:UrlTextBox>
			<Button
				Grid.Row="0"
				Grid.Column="2"
				Margin="3, 0, 0, 0"
				Classes="carbo-primary"
				Content="Send"
				FontSize="20">
			</Button>
		</Grid>
	</Grid>
	
</UserControl>
