<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:viewmodels="clr-namespace:Carbo.ViewModels"
             x:Class="Carbo.Controls.HttpMethodSelector"
			 x:DataType="viewmodels:HttpMethodSelectorViewModel">

	<ComboBox ItemsSource="{Binding HttpMethods, Mode=OneWay}" SelectedItem="{Binding SelectedHttpMethod, Mode=TwoWay}" SelectedIndex="0" Width="145">
		<ComboBox.ItemTemplate>
			<DataTemplate>
				<TextBlock Text="{Binding Method, Mode=OneWay}" FontSize="20" HorizontalAlignment="Center" />
			</DataTemplate>
		</ComboBox.ItemTemplate>
	</ComboBox>
	
</UserControl>
